<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vote_song_holder_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/vote_song_album_image"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vote_song_holder_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/vote_song_holder_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/vote_song_holder_title" />

        <TextView
            android:id="@+id/vote_song_holder_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/vote_song_holder_artist" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vote_song_holder_album"
            android:orientation="horizontal">

            <Button
                android:id="@+id/vote_downvote_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@android:drawable/arrow_down_float"
                android:backgroundTint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/vote_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="TextView" />

            <Button
                android:id="@+id/vote_upvote_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:background="@android:drawable/arrow_up_float"
                android:backgroundTint="@android:color/darker_gray" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>