<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bouncer_party_holder_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bouncer_party_image"
        android:layout_width="100dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bouncer_party_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bouncer_party_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bouncer_party_name_text"
            android:text="TextView" />

        <TextView
            android:id="@+id/bouncer_party_start_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bouncer_party_description_text"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/bouncer_party_end_time_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bouncer_party_start_time_text"
            android:layout_weight="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/bouncer_party_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bouncer_party_end_time_text"
            android:text="TextView" />

        <Button
            android:id="@+id/bouncer_scan_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_below="@+id/bouncer_party_location_text"
            android:layout_marginRight="10dp"
            android:background="?android:attr/fingerprintAuthDrawable" />

        <Button
            android:id="@+id/bouncer_directions_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/bouncer_party_location_text"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/bouncer_scan_button"
            android:background="@android:drawable/ic_menu_directions" />

        <Button
            android:id="@+id/bouncer_music_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/bouncer_party_location_text"
            android:layout_toRightOf="@+id/bouncer_directions_button"
            android:background="@android:drawable/stat_sys_headset"
            android:backgroundTint="?attr/colorButtonNormal" />

    </RelativeLayout>

</LinearLayout>